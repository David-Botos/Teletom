{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./web/static/js",
      "rootDir": "./cmd/web/static/ts",
      "moduleResolution": "node",
      "lib": ["DOM", "ES2020", "WebWorker"],
      "sourceMap": true
    },
    "include": ["cmd/web/static/ts/**/*"],
    "exclude": ["node_modules"]
  }